<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test your Phonemics Arabic Keyboard"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap the text field below to open the keyboard:"
        android:textSize="14sp"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/testEditText"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="top|start"
        android:hint="Type Arabic text here using the phonemic keyboard..."
        android:textDirection="rtl"
        android:textAlignment="viewStart"
        android:background="@android:drawable/edit_text"
        android:padding="12dp"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Features to test:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="• Type phonemic Arabic and see real-time transformation\n• Press the dot (•) key to cycle through character variants\n• Switch between keyboard layouts using the keyboard icon\n• Use suggestions from the top bar\n• Test space and delete functions"
        android:textSize="14sp"
        android:lineSpacingExtra="4dp" />

</LinearLayout>